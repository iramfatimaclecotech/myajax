      <%= form.label :start_date %><br>
      <%= form.datetime_select :start_date %>
    </p>
    <p>
      <%= form.label :end_date %><br>
      <%= form.datetime_select :end_date %>
    </p>
    <p>
    <p>
      <%= form.label :physician_id %><br>
      <%#= form.collection_select :physician_id, Physician.all, :id, :name, class: "form-control" %>
      <%= form.text_field :physician_id %><br>
    </p>
    <p>
      <%= form.submit %>
    </p>
  <% end %>

 
<% end %>
</center>