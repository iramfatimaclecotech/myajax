<center>

<% @patients.each do |patient| %>
  <div class="patient">
    <h3>patient name:<%= patient.name %></h3>
    <h4>Appointments list :</h4><br>
    <ul>
      
  <div id="stage_dropdown"></div>
    </ul>
  </div>
