<h2 >edit a post:</h2>
<%= form_for [ @user, @post ],remote: :true do |form| %>
  <div class="modal-body">
    <div id="errorArea"></div>
    <div class="form-group">
      <%= form.label :post_name ,class: "col-md-4 control-label"%><br>
      <%= form.text_field :post_name, class: "form-control" %><br>
    </div>

    <div>
      <%= form.label :post_details,class: "col-md-4 control-label" %><br>
      <%= form.text_area :post_details, class: "form-control" %><br>
    </div>
  </div>

  <div class="modal-footer">
    <div>
      <%= form.submit %>
    </div>
  </div>
<% end %>