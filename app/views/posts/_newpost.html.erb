<h2  class= "d" >Add a post:</h2>

<div class="container b">
  <%= form_with model: [ @user, @user.posts.build ], remote: true  do |form| %>
      <div class="form-group">
          <%= form.label :post_name, class: "col-md-4 control-label" %>
          <%= form.text_field :post_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= form.label :post_details %>
        <%= form.text_area :post_details, class: "form-control"  %>
      </div>

      <div class="form-group">
        <%= form.submit %>
      </div>
  <% end %>
</div>


<style>
    .b{
    color: #0f5132;
}
.d{
    color: #055160;
}

</style>