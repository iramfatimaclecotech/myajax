      <div><%= message %></div>
    <% end %>
    <div>
    <div >
    <%= form.label :isbn %><br>
    <%= form.text_field :isbn, class: "form-control", style: 'width: 300px;' %>
    <% book.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
    <div>
    <%= form.submit class: 'btn btn-success btn-sm' %>
