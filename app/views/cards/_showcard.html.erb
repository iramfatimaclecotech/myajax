<div class="container   body" height= "1000px">
<center>
<h1 style="color: #558757;">card Details </h1>
<table class="table table-success  w" colspan="2">
  <thead>
    <tr>
      <th class="text-center" colspan="2">show card details</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">name</th>
      <td><%= @card.name %></td>
    </tr>
    <tr>
      <th scope="row">header</th>
      <td><%= @card.header %></td>
    </tr>
    <tr>
      <th scope="row">rating</th>
      <%@card.reviews.each do |review| %>
      <td><% review.rating.to_i.times do %>
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
          <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
        </svg>        
         <% end %> </td>
    </tr>
    <% end %>
    <tr>
    <td><%#=link_to 'Edit review', edit_card_review_path(@review), remote: :true %></td>
    <td><%#= link_to 'Destroy', review, confirm: 'Are you sure?', method: :delete ,class:"btn btn secondry"%></td>
    </tr>

  </tbody>
</table>
</center>


<%= form_with model: [ @card, @card.reviews.build ], remote: true  do |f| %>
<%= hidden_field_tag :previous_request, request.referer %>
  <div class="field form-group">
  <%= f.label :rating, "What's your overall rating?" %>
    <div class="rating">
      <%= f.collection_radio_buttons(:rating, [[5],[4],[3],[2],[1]], :first, :last) do |star| %>
          <%= star.radio_button %>
           <%#= b.radio_button + b.label {''} %>
          <%= star.label(class: "text-white") %>
      <% end %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Submit your review", class: "btn btn-info .b" %>
  </div>
<% end %>

<style>
.w{
  width: 100%;
  padding-top: 5px;
}
.b{
  --bs-btn-border-radius: 0.0;
  width: 20%;
}
.body{
  --bs-body-bg: #b0cfcc;
}
</style>
</div>
