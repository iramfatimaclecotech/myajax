
<div style="background-color:#d3d996;  height: 1000px;">
  <div id="edit-review">
      <div class="container   body" height= "1000px">
        <h1 style="color: #558757;">card Details </h1>
            <div class="container " style="color: black">
                <div class="row ">
                        <div class="col">
                            <h2>  name:</h2><%= @card.name %>
                        </div>
                          <div class="col">
                              <h2>  header:</h2><%= @card.header %>
                          </div>
                            <div class="col">
                                <h2> rating:</h2><%@card.reviews.each do |review| %>
                  
                                          <td id='review_id <%= review.id %>'><% review.rating.to_i.times do %>
                                              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                                  <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                                                </svg>        
                                            <% end %> </td>
                                                <td><%=link_to 'Edit review', edit_card_review_path(@card, review), remote: :true ,class:"btn btn-dark button" %></td>
                                                <td><%=link_to 'delete review', card_review_path(@card, review), confirm: 'Are you sure?', method: :delete ,class:"btn btn-dark button",remote: :true %></td>
                                                </tr>
                                    <% end %>
                              </div>
                    </div>
            </div>  
  </div>


<%= form_with model: [ @card, @card.reviews.build ], remote: true  do |f| %>
<%= hidden_field_tag :previous_request, request.referer %>
  <div class="field form-group">
  <%= f.label :rating, "What's your overall rating?" %>
    <div class="rating">
      <%= f.collection_radio_buttons(:rating, [[5],[4],[3],[2],[1]], :first, :last) do |star| %>
          <%= star.radio_button %>
           <%#= .radio_button + b.label {''} %>
          <%= star.label(class: "text-white") %>
      <% end %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit "Submit your review", class: "btn btn-dark" %>
  </div>
<% end %>
</div>

<style>
.w{
  width: 100%;
  padding-top: 5px;
}
